<resources>
    <style name="Base.Theme.Task" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light Theme Customizations -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:buttonStyle">@style/LightButton</item>
        <item name="android:editTextStyle">@style/LightEditText</item>
    </style>

    <style name="Theme.Task" parent="Base.Theme.Task" />

    <style name="LightButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LightEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#BDBDBD</item> <!-- Use colorHint instead -->
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F5F5F5</item>
    </style>

    <style name="LightCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
</resources>
