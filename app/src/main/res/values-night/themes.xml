<resources>
    <style name="Base.Theme.Task" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark Theme Customizations -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:background">#121212</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorBackground">#121212</item>
        <item name="android:buttonStyle">@style/DarkButton</item>
        <item name="android:editTextStyle">@style/DarkEditText</item>
    </style>

    <style name="Theme.Task" parent="Base.Theme.Task" />

    <style name="DarkButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DarkEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#BDBDBD</item> <!-- Use colorHint instead -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#1E1E1E</item>
    </style>

    <style name="DarkCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#1E1E1E</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
</resources>
